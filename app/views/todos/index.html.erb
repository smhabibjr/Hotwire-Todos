<div class="container">
<p style="color: green"><%= notice %></p>

 <div class="row">
   <div class="col-lg-12">
     <h1>Todos</h1>
   </div>
 </div>

  <div class="row">
    <div class="d-flex justify-content-center">
      <%= render "form", todo:Todo.new %>
    </div>
  </div>

  <div id="todos">
    <% @todos.each do |todo| %>
      <%= render todo %>
      <p>
        <%= link_to "Show this todo", todo %>
      </p>
    <% end %>
  </div>

  <%= link_to "New todo", new_todo_path %>

</div>