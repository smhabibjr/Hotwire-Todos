<div class="" id="<%= "#{dom_id(todo)}_item" %>">
  <%= turbo_frame_tag dom_id(todo) do %>

    <div class="row mt-1">
      <div class="col-6">
        <%= link_to todo.title, edit_todo_path(todo), class: "fs-3 text-decoration-none #{"text-decoration-line-through" if todo.complete?}" %>
      </div>

      <div class="col-3 d-flex justify-content-end">
        <% if todo.complete? %>
          <%= button_to "Mark incomplete", todo_path(todo, todo: { status: 'incomplete' }), method: :patch, class: "btn btn-outline-success" %>
        <% else %>
          <%= button_to "Mark complete", todo_path(todo, todo: { status: 'complete' }), method: :patch, class: "btn btn-outline-secondary" %>
        <% end %>
      </div>

      <div class="col-3 d-flex justify-content-end">
        <%= button_to "Delete", todo_path(todo), method: :delete, class: "btn btn-danger" %>
      </div>

    </div>
  <% end %>
</div>
